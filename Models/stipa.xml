<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>stipa.ac</path>
  
  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Caproni-Stipa/Models/Liveries", 10);
      
      var self = cmdarg();
      
      var float_0 = self.getNode("sim/multiplay/generic/float[0]", 1);
      var float_1 = self.getNode("sim/multiplay/generic/float[1]", 1);
      
      var crew_door = self.getNode("sim/model/door-positions/crew/position-norm", 1);
      var passenger_door = self.getNode("sim/model/door-positions/passenger/position-norm", 1);
      
      crew_door.alias(float_0);
      passenger_door.alias(float_1);
    </load>
    
    <unload>
      livery_update.stop();
      crew_door.unalias();
      passenger_door.unalias();
    </unload>
  </nasal>
  
  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>porteAG</object-name>
    <object-name>porteAD</object-name>
    <object-name>porteBG</object-name>
    <object-name>porteBD</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>ailes2</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
    
    <object-name>trous</object-name>
    <object-name>cables</object-name>
    <object-name>echappe</object-name>
    <object-name>moteur</object-name>
    <object-name>suportmoteur</object-name>
    <object-name>helice</object-name>
    <object-name>axes</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    
    <!-- Objets transparents -->
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>vitres</object-name>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>porteAG</object-name>
    <object-name>porteAD</object-name>
    <object-name>porteBG</object-name>
    <object-name>porteBD</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>ailes2</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
    
    <object-name>trous</object-name>
    <object-name>cables</object-name>
    <object-name>echappe</object-name>
    <object-name>moteur</object-name>
    <object-name>suportmoteur</object-name>
    <object-name>helice</object-name>
    <object-name>axes</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    
    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>
  </animation>
  
  <effect>
    <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
    <object-name>fuselage</object-name>
    <object-name>porteAG</object-name>
    <object-name>porteAD</object-name>
    <object-name>porteBG</object-name>
    <object-name>porteBD</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>ailes2</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
  </effect>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Caproni-Stipa/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitres</object-name>
  </effect>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </effect>
  
  <!-- Une ombre pour OSG -->
  <model>
    <path>Aircraft/Caproni-Stipa/Models/shadow.xml</path>
    <offsets>
      <x-m>  0.0 </x-m>
      <y-m>  0.0 </y-m>
      <z-m> -1.5 </z-m>
    </offsets>
  </model>
  
  <!-- Interieur -->
  <model>
    <usage>interior</usage>
    <path>Aircraft/Caproni-Stipa/Models/Interior/interior.xml</path>
  </model>
  
  <!-- Cranking effects -->
  <model>
    <path>Aircraft/Caproni-Stipa/Models/Effects/cranking/cranking.xml</path>
    <offsets>
      <x-m> -2.10920 </x-m>
      <y-m>  0.32974 </y-m>
      <z-m> -0.70057 </z-m>
    </offsets>
  </model>
  
  <!-- Effets sur le sol -->
  <!-- Roue gauche -->
  <model>
    <path>Aircraft/Caproni-Stipa/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -1.719 </x-m>
      <y-m> -1.148 </y-m>
      <z-m> -1.727 </z-m>
    </offsets>
  </model>
  
  <!-- Roue droite -->
  <model>
    <path>Aircraft/Caproni-Stipa/Models/Effects/ground/ground1.xml</path>
    <offsets>
      <x-m> -1.719 </x-m>
      <y-m>  1.148 </y-m>
      <z-m> -1.727 </z-m>
    </offsets>
  </model>
  
  <!-- Patte de queue -->
  <model>
    <path>Aircraft/Caproni-Stipa/Models/Effects/ground/ground2.xml</path>   
    <offsets>
      <x-m>  2.125 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.418 </z-m>
    </offsets>
  </model>
  
  <!-- L'hélice -->
  <animation>
    <name>HeliceComplete</name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>
  
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>900</value>
      </greater-than>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
      <and>
        <greater-than>
          <property>engines/engine[0]/rpm</property>
          <value>300.000</value>
        </greater-than>
        <less-than>
          <property>engines/engine[0]/rpm</property>
          <value>900.001</value>
        </less-than>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>900</value>
      </less-than>
    </condition>
  </animation>
  
  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value> 5 </value>
      </greater-than>
    </condition>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -2.237 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.160 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <!-- Animations des aileronss -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 15 </factor>
    <axis>
      <x1-m> -0.72583 </x1-m>
      <y1-m> -6.18462 </y1-m>
      <z1-m> -0.19465 </z1-m>
      <x2-m> -0.38009 </x2-m>
      <y2-m> -3.49805 </y2-m>
      <z2-m> -0.21358 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> 15 </factor>
    <axis>
      <x1-m> -0.38009 </x1-m>
      <y1-m>  3.49805 </y1-m>
      <z1-m> -0.21358 </z1-m>
      <x2-m> -0.72583 </x2-m>
      <y2-m>  6.18462 </y2-m>
      <z2-m> -0.19465 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m>  2.19559 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.13189 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m>  2.24615 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.08532 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <!-- Rotation de la roulette de queue en fonction de la gouverne de direction -->
  <animation>
    <name>RouletteDeQueue</name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>RouletteDeQueue</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m>  1.88261 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -1.17564 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.71962 </x-m>
      <y-m> -1.14846 </y-m>
      <z-m> -1.45980 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.71962 </x-m>
      <y-m>  1.14846 </y-m>
      <z-m> -1.45980 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  2.12513 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -1.28947 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <!-- Les portes -->
  <animation>
    <name>LesPortesAvants</name>
    <object-name>porteAG</object-name>
    <object-name>porteAD</object-name>
  </animation>
    
  <animation>
    <type>pick</type>
    <object-name>LesPortesAvants</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>porteAG</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> 180 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -1.60424 </x1-m>
      <y1-m> -0.38665 </y1-m>
      <z1-m>  1.22636 </z1-m>
      <x2-m> -1.24659 </x2-m>
      <y2-m> -0.39773 </y2-m>
      <z2-m>  1.22636 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>porteAD</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> 180 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -1.24659 </x1-m>
      <y1-m>  0.39773 </y1-m>
      <z1-m>  1.22636 </z1-m>
      <x2-m> -1.60424 </x2-m>
      <y2-m>  0.38665 </y2-m>
      <z2-m>  1.22636 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <name>LesPortesArrieres</name>
    <object-name>porteBG</object-name>
    <object-name>porteBD</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>LesPortesArrieres</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>porteBG</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> 180 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.94786 </x1-m>
      <y1-m> -0.38467 </y1-m>
      <z1-m>  1.22716 </z1-m>
      <x2-m> -0.50697 </x2-m>
      <y2-m> -0.35553 </y2-m>
      <z2-m>  1.21841 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>porteBD</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> 180 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.50697 </x1-m>
      <y1-m>  0.35553 </y1-m>
      <z1-m>  1.21841 </z1-m>
      <x2-m> -0.94786 </x2-m>
      <y2-m>  0.38467 </y2-m>
      <z2-m>  1.22716 </z2-m>
    </axis>
  </animation>
  
</PropertyList>
